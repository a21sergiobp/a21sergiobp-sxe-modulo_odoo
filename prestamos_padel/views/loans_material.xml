    <record id="view_material_kanban" model="ir.ui.view">
        <field name="name">material.kanban</field>
        <field name="model">loans.material</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="state"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_content">
                            <div class="oe_kanban_card_header">
                                <div class="oe_kanban_record_title">
                                    <field name="name"/>
                                </div>
                            </div>
                            <div class="oe_kanban_card_body">
                                <field name="description"/>
                            </div>
                        </div>
                        <div class="oe_kanban_bottom_right">
                            <a type="open" name="%(material.material_loans_view_form)d" string="Editar"/>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

