<odoo>
    <record id='material_menu_action' model='ir.actions.act_window'>
        <field name="name">Materiais da empresa</field>
        <field name="res_model">loans.material</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem name="Prestamos pádel" id="loans_base_menu"/>
    <menuitem name="Material" id="loans_menu_root" parent="loans_base_menu" action="material_menu_action"/>

    <!-- Vista de fromulario-->
    <record id="material_loans_view_form" model="ir.ui.view">
        <field name="name">Fomulario materiais empresa</field>
        <field name="model">loans.material</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="make_unavailable" string="Indispoñible" type="object"/>
                    <button name="make_available" string="Dispoñible" type="object"/>
                    <button name="make_borrowed" string="Prestado" type="object"/>
                    <button name="make_lost" string="Roto" type="object"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <group>
                    <field name="name"/>
                    <field name="description"/>
                </group>
            </form>
        </field>
    </record>

    <!-- Vista de árbore-->
    <record id="material_loans_view_tree" model="ir.ui.view">
        <field name="name">Árbore materiais empresa</field>
        <field name="model">loans.material</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="description"/>
                <field name="available"/>
                <field name="state"/>
            </tree>
        </field>
    </record>
</odoo>